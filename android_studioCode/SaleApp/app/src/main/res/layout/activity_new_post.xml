<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhehuan.saleapp.NewPostActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/postPhoto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="launchCamera"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/priceET"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_below="@+id/storeET"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category: "
        android:id="@+id/textView30"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_alignBottom="@+id/categoryET"
        android:layout_alignRight="@+id/textView29"
        android:layout_alignEnd="@+id/textView29"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/storeET"
        android:layout_marginTop="24dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_below="@+id/postPhoto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Store: "
        android:id="@+id/textView4"
        android:layout_above="@+id/priceET"
        android:layout_toLeftOf="@+id/storeET"
        android:layout_toStartOf="@+id/storeET"
        android:layout_row="7"
        android:layout_column="0" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/categoryET"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_below="@+id/discountET"
        android:layout_alignRight="@+id/beforeDiscountCB"
        android:layout_alignEnd="@+id/beforeDiscountCB"
        android:entries="@array/categories"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price: "
        android:id="@+id/textView5"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_alignTop="@+id/beforeDiscountCB"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/discountET"
        android:layout_row="8"
        android:layout_column="1"
        android:inputType="number"
        android:layout_below="@+id/priceET"
        android:layout_alignRight="@+id/categoryET"
        android:layout_alignEnd="@+id/categoryET"
        android:layout_toRightOf="@+id/textView31"
        android:layout_toEndOf="@+id/textView31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Discount: "
        android:id="@+id/textView29"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_above="@+id/categoryET"
        android:layout_toLeftOf="@+id/categoryET"
        android:layout_toStartOf="@+id/categoryET" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/postButton"
        android:layout_row="9"
        android:layout_column="1"
        android:onClick="sendPost"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="before discount"
        android:id="@+id/beforeDiscountCB"
        android:layout_alignBottom="@+id/priceET"
        android:layout_toRightOf="@+id/priceET"
        android:layout_toEndOf="@+id/priceET" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBotton"
        android:onClick="backToPreviousView"
        android:layout_below="@+id/descriptionET"
        android:layout_toRightOf="@+id/storeET"
        android:layout_toEndOf="@+id/storeET" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description: "
        android:id="@+id/textView31"
        android:layout_below="@+id/categoryET"
        android:layout_alignLeft="@+id/textView30"
        android:layout_alignStart="@+id/textView30"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionET"
        android:layout_below="@+id/textView31"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_above="@+id/postButton"
        android:layout_alignRight="@+id/cancelBotton"
        android:layout_alignEnd="@+id/cancelBotton" />


</RelativeLayout>
