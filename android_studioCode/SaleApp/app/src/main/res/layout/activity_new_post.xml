<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhehuan.saleapp.NewPostActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView3"
        android:src="@drawable/camera3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText14"
        android:layout_row="0"
        android:layout_column="8"
        android:layout_below="@+id/editText13"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_below="@+id/editText10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView30"
        android:layout_alignBottom="@+id/editText13"
        android:layout_toLeftOf="@+id/editText13"
        android:layout_toStartOf="@+id/editText13"
        android:layout_row="6"
        android:layout_column="0" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:layout_marginTop="44dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/textView29"
        android:layout_toEndOf="@+id/textView29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Store: "
        android:id="@+id/textView4"
        android:layout_above="@+id/editText11"
        android:layout_toLeftOf="@+id/editText10"
        android:layout_toStartOf="@+id/editText10"
        android:layout_row="7"
        android:layout_column="0" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:layout_below="@+id/editText12"
        android:layout_toRightOf="@+id/textView29"
        android:layout_toEndOf="@+id/textView29"
        android:layout_marginTop="64dp"
        android:layout_row="7"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price: "
        android:id="@+id/textView5"
        android:layout_above="@+id/editText12"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_row="8"
        android:layout_column="0" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView29"
        android:layout_alignBottom="@+id/editText12"
        android:layout_toLeftOf="@+id/editText12"
        android:layout_toStartOf="@+id/editText12"
        android:layout_row="9"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_row="9"
        android:layout_column="1"
        android:layout_below="@+id/editText14"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price before discount"
        android:id="@+id/checkBox"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

</RelativeLayout>
